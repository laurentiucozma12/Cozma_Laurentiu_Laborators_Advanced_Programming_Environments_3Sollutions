		<ImplicitUsings>enable</ImplicitUsings>
		<UserSecretsId>a5eb4ea2-9814-4c5e-9f03-b7975d07bf27</UserSecretsId>
	</PropertyGroup>

	<ItemGroup>
		<Protobuf Include="Protos\customersCRUD.proto" GrpcServices="Server" />
